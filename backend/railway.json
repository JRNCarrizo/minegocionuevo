{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "java -Dspring.profiles.active=railway -jar target/backend-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/api/publico/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  },
  "variables": {
    "SPRING_PROFILES_ACTIVE": "railway",
    "PORT": "8080"
  }
} 