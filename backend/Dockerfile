# Usar OpenJDK 17
FROM openjdk:17-jdk-slim

# Establecer directorio de trabajo
WORKDIR /app

# Forzar rebuild sin cache
ARG BUILD_DATE=unknown
RUN echo "Build date: $BUILD_DATE"

# Copiar archivos de Maven
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

# Dar permisos de ejecuci贸n a mvnw
RUN chmod +x mvnw

# Copiar c贸digo fuente
COPY src src

# Construir con perfil de producci贸n (solo PostgreSQL, sin H2) - FORZAR REBUILD COMPLETO
RUN ./mvnw clean package -Pprod -DskipTests

# Exponer puerto
EXPOSE 8080

# Comando para ejecutar la aplicaci贸n con perfil railway
ENTRYPOINT ["java", "-Dspring.profiles.active=railway", "-jar", "target/backend-0.0.1-SNAPSHOT.jar"] 